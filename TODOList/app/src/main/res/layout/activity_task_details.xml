<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#D78A64"

    tools:context="com.example.nehasharma.todolist.TaskDetailsActivity">

    <Button
        android:id="@+id/btnChangeDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reminder Date"
        android:layout_above="@+id/btnChangeTime"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_margin="3dp"
        android:radius="6dp"/>


       <Button
           android:id="@+id/btnChangeTime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Reminder Time"
           android:layout_centerVertical="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_marginBottom="24dp"
           android:textStyle="bold"
           android:shadowColor="#000000"
           android:textColor="#ffffff"
           android:gravity="center"
           android:layout_margin="3dp"
           android:radius="6dp"/>



       <ImageButton
           android:id="@+id/btnAddNotes"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/notes"
           android:layout_below="@+id/btnChangeTime"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:layout_marginTop="32dp"
           android:background="#D78A64"/>

       <EditText
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=""
           android:id="@+id/editTask"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:layout_alignParentStart="true"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textStyle="bold"
           android:shadowColor="#000000"
           android:textColor="#ffffff"
           android:gravity="center"
           android:layout_margin="3dp"/>


       <TextView
           android:id="@+id/txtViewDate"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=" "
           android:layout_marginLeft="52dp"
           android:layout_alignBottom="@+id/btnChangeDate"
           android:layout_toRightOf="@+id/btnChangeTime"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textStyle="bold"
           android:shadowColor="#000000"
           android:textColor="#ffffff"
           android:gravity="center"
           android:layout_margin="3dp"/>

       <TextView
           android:id="@+id/txtViewTime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text=" "
           android:layout_alignBottom="@+id/btnChangeTime"
           android:layout_alignLeft="@+id/txtViewDate"
           android:layout_alignStart="@+id/txtViewDate"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textStyle="bold"
           android:shadowColor="#000000"
           android:textColor="#ffffff"
           android:gravity="center"
           android:layout_margin="3dp"/>

       <Button
           android:id="@+id/btnDone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Done"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="24dp"
           android:textStyle="bold"
           android:shadowColor="#000000"
           android:textColor="#ffffff"
           android:gravity="center"
           android:layout_margin="3dp"/>

   </RelativeLayout>
